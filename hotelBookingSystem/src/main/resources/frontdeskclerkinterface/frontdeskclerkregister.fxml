<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.easyhotelbooking.hotelbookingsystem.controller.frontdeskclerkregister.FrontDeskClerkRegisterController">

    <center>
        <VBox spacing="15" alignment="TOP_LEFT" style="-fx-padding: 30;">
            <Label text="Register Front Desk Clerk" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <Label text="Employee ID:" GridPane.rowIndex="0" />
                <TextField fx:id="employeeIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Name:" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Last Name:" GridPane.rowIndex="2" />
                <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Phone Number:" GridPane.rowIndex="3" />
                <TextField fx:id="phoneNumberField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="User:" GridPane.rowIndex="4" />
                <TextField fx:id="userField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="5" />
                <PasswordField fx:id="passwordField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Role:" GridPane.rowIndex="6" />
                <ComboBox fx:id="roleCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button text="Save" onAction="#onConfirm" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
                <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
