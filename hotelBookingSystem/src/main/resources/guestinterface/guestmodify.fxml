<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.easyhotelbooking.hotelbookingsystem.controller.guestregister.GuestModifyController">

    <center>
        <VBox spacing="15" style="-fx-padding: 30;">
            <Label text="Modify Guest" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Credential:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="credentialField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Last Name:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="lastNameField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="addressField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="emailField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                <Label text="Phone:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                <Label text="Native Country:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <TextField fx:id="countryField" GridPane.rowIndex="7" GridPane.columnIndex="1" />
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="saveButton" onAction="#onSave" text="Save"
                        style="-fx-background-color: #007bff; -fx-text-fill: white;" />
                <Button fx:id="cancelButton" onAction="#onCancel" text="Cancel"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>