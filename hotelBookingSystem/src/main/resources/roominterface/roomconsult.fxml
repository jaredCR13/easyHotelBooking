<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.easyhotelbooking.hotelbookingsystem.controller.roomregister.RoomConsultController">

    <Label text="Room Information" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120"/>
            <ColumnConstraints minWidth="250"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
        </rowConstraints>

        <Label text="Room Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="roomNumberLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="priceLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="descriptionLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Style:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="styleLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Hotel ID:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="hotelIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Go Back" onAction="#onClose" prefWidth="100" style="-fx-background-color: #dc3545; -fx-text-fill: white;" />
    </HBox>
</VBox>

